 RowBox[{
  RowBox[{
  "labelInnerProdFun", "=", 
   "\"\<The inner product can also be generalized to find the 'angle' between \
two functions\>\""}], ";"}], "\n", 
 RowBox[{
  RowBox[{
  "infoInnerProdFun", "=", 
   "\"\<'Angle' (inner product) is a very general idea.\\n\\nTwo functions f \
and g have dependence on frequency or mode parameters n and m. Choose f and g \
from the selection box and the modes from the sliders.\\n\\nChoose an \
interval over which to examine the functions.\\n\\nThe demonstration then \
calculates the inner product of f and g over the specified interval, and \
reports the results: if the inner product is zero, the two functions are \
orthogonal (at 'right angles').\\n\\nIf the inner product is not zero, they \
are not orthogonal.\\n\\nTry several different functions and modes. Can you \
guess from the above demonstration with discrete complex-valued sinusoids \
which will be orthogonal?\>\""}], ";"}], "\n", 
 RowBox[{"Manipulate", "[", 
  RowBox[{
   RowBox[{
    RowBox[{"innerProd", "=", 
     RowBox[{"Chop", "[", 
      RowBox[{"NIntegrate", "[", 
       RowBox[{
        RowBox[{
         RowBox[{"func1", "[", 
          RowBox[{"n1", ",", "x"}], "]"}], "*", 
         RowBox[{"func2", "[", 
          RowBox[{"n2", ",", "x"}], "]"}]}], ",", 
        RowBox[{"{", 
         RowBox[{"x", ",", 
          RowBox[{"-", "a"}], ",", "a"}], "}"}], ",", 
        RowBox[{"AccuracyGoal", "\[Rule]", "2"}]}], "]"}], "]"}]}], ";", 
    "\[IndentingNewLine]", 
    RowBox[{"Column", "[", 
     RowBox[{"{", 
      RowBox[{
       RowBox[{"Row", "[", 
        RowBox[{"{", "\[IndentingNewLine]", "   ", 
         RowBox[{
          RowBox[{"Plot", "[", 
           RowBox[{
            RowBox[{"{", 
             RowBox[{
              RowBox[{"func1", "[", 
               RowBox[{"n1", ",", "x"}], "]"}], ",", 
              RowBox[{"func2", "[", 
               RowBox[{"n2", ",", "x"}], "]"}]}], "}"}], ",", 
            RowBox[{"{", 
             RowBox[{"x", ",", 
              RowBox[{"-", "a"}], ",", "a"}], "}"}], ",", 
            "\[IndentingNewLine]", "             ", 
            RowBox[{"PlotLabel", "\[Rule]", 
             RowBox[{"{", 
              RowBox[{
               RowBox[{"func1", "[", 
                RowBox[{"n1", ",", "x"}], "]"}], ",", 
               RowBox[{"func2", "[", 
                RowBox[{"n2", ",", "x"}], "]"}]}], "}"}]}], ",", 
            "\[IndentingNewLine]", "             ", 
            RowBox[{"Filling", "\[Rule]", "Axis"}], ",", 
            RowBox[{"ImageSize", "\[Rule]", "300"}]}], "]"}], ",", 
          RowBox[{"Spacer", "[", "20", "]"}], ",", "\[IndentingNewLine]", 
          "   ", 
          RowBox[{"Plot", "[", 
           RowBox[{
            RowBox[{
             RowBox[{"func1", "[", 
              RowBox[{"n1", ",", "x"}], "]"}], "*", 
             RowBox[{"func2", "[", 
              RowBox[{"n2", ",", "x"}], "]"}]}], ",", 
            RowBox[{"{", 
             RowBox[{"x", ",", 
              RowBox[{"-", "a"}], ",", "a"}], "}"}], ",", 
            "\[IndentingNewLine]", "             ", 
            RowBox[{"PlotLabel", "\[Rule]", 
             RowBox[{
              RowBox[{"func1", "[", 
               RowBox[{"n1", ",", " ", "x"}], "]"}], "*", 
              RowBox[{"func2", "[", 
               RowBox[{"n2", ",", "x"}], "]"}]}]}], ",", " ", 
            "\[IndentingNewLine]", "             ", 
            RowBox[{"PlotStyle", "\[Rule]", "Green"}], ",", 
            RowBox[{"Filling", "\[Rule]", "Axis"}], ",", 
            RowBox[{"ImageSize", "\[Rule]", "300"}]}], "]"}]}], " ", "}"}], 
        "]"}], ",", "\[IndentingNewLine]", 
       RowBox[{"If", "[", 
        RowBox[{
         RowBox[{"innerProd", "==", "0"}], ",", "\[IndentingNewLine]", 
         RowBox[{
         "Text", "@", 
          "\"\<The inner product is 0, the two functions are \
orthogonal.\>\""}], ",", 
         RowBox[{"\"\<The inner product is \>\"", "~~", "\[IndentingNewLine]", 
          RowBox[{"ToString", "[", 
           RowBox[{"SetPrecision", "[", 
            RowBox[{"innerProd", ",", "4"}], "]"}], "]"}], "~~", 
          "\"\<. The two functions are \
\!\(\*StyleBox[\"not\",FontSlant->\"Italic\"]\) orthogonal.\>\""}]}], "]"}]}],
       " ", "}"}], "]"}]}], ",", "\[IndentingNewLine]", 
   RowBox[{"{", 
    RowBox[{
     RowBox[{"{", 
      RowBox[{
      "func1", ",", "MySin", ",", 
       "\"\<function \!\(\*SubscriptBox[\(f\), \(n\)]\)(x)\>\""}], "}"}], ",", 
     RowBox[{"{", 
      RowBox[{
       RowBox[{"MySin", "\[Rule]", 
        RowBox[{"Sin", "[", 
         RowBox[{"n", " ", "x"}], "]"}]}], ",", 
